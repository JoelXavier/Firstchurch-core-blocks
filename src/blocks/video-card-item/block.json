{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "firstchurch/video-card-item",
  "version": "0.1.1",
  "title": "Video Card Item",
  "category": "firstchurch",
  "icon": "format-video",
  "description": "A card that uses a YouTube video thumbnail as its image.",
  "supports": {
    "html": false,
    "reusable": false,
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "__experimentalFontFamily": true,
      "fontStyle": true,
      "fontWeight": true,
      "letterSpacing": true,
      "textDecoration": true,
      "textTransform": true
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true
    },
    "color": {
      "text": false,
      "background": true,
      "link": false,
      "gradients": true
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    }
  },
  "attributes": {
    "label": {
      "type": "string",
      "default": "VIDEO"
    },
    "title": {
      "type": "string",
      "default": "Watch Recent Service"
    },
    "linkUrl": {
      "type": "string",
      "default": "#"
    },
    "linkText": {
      "type": "string",
      "default": "WATCH NOW >"
    },
    "videoUrl": {
      "type": "string",
      "default": ""
    },
    "videoId": {
      "type": "string",
      "default": ""
    },
    "mediaUrl": {
      "type": "string",
      "default": ""
    },
    "cardLabelColor": {
      "type": "string"
    },
    "cardTitleColor": {
      "type": "string"
    },
    "cardLinkColor": {
      "type": "string"
    }
  },
  "textdomain": "first-church-core-blocks",
  "editorScript": "file:./index.js",
  "viewScript": "file:./view.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}
