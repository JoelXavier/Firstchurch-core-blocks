{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "antigravity/event-feed",
  "version": "1.0.0",
  "title": "Event Feed (Auto)",
  "category": "antigravity",
  "icon": "calendar-alt",
  "description": "Automatically displays a list of Event posts with filters.",
  "attributes": {
    "blockTitle": {
      "type": "string",
      "default": "Upcoming Events"
    },
    "blockSubtitle": {
      "type": "string",
      "default": ""
    },
    "perPage": {
      "type": "number",
      "default": 9
    },
    "columns": {
      "type": "number",
      "default": 3
    },
    "filterStyle": {
      "type": "string",
      "default": "sidebar"
    },
    "showCategory": {
      "type": "boolean",
      "default": true
    },
    "showExcerpt": {
      "type": "boolean",
      "default": false
    }
  },
  "supports": {
    "html": false,
    "align": ["wide", "full"],
    "color": {
      "background": true,
      "text": true
    }
  },
  "textdomain": "antigravity-core-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}
