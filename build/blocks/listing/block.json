{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "firstchurch/listing",
  "version": "0.1.0",
  "title": "Listing (Feed)",
  "category": "firstchurch",
  "icon": "grid-view",
  "description": "Display a dynamic list or grid of posts.",
  "attributes": {
    "cardType": {
      "type": "string",
      "default": "standard"
    },
    "selectedTaxonomy": {
      "type": "string",
      "default": "category"
    },
    "selectedTermIds": {
      "type": "array",
      "default": [],
      "items": {
        "type": "number"
      }
    },
    "postType": {
      "type": "string",
      "default": "post"
    },
    "perPage": {
      "type": "number",
      "default": 3
    },
    "layout": {
      "type": "string",
      "default": "grid"
    },
    "columns": {
      "type": "number",
      "default": 3
    },
    "showDate": {
      "type": "boolean",
      "default": true
    },
    "showCategory": {
      "type": "boolean",
      "default": true
    },
    "showExcerpt": {
      "type": "boolean",
      "default": true
    },
    "showMedia": {
      "type": "boolean",
      "default": true
    },
    "filterStyle": {
      "type": "string",
      "default": "sidebar"
    },
    "blockTitle": {
      "type": "string",
      "default": "Content Listings"
    },
    "blockSubtitle": {
      "type": "string",
      "default": "From testimonials, to success stories"
    }
  },
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "textdomain": "first-church-core-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}